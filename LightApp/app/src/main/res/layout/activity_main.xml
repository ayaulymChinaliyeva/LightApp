<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kz.lightapp.lightapp.MainActivity">

    <Button
        android:id="@+id/volunteerButton"
        android:layout_width="249dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/styleButton"
        android:fontFamily="Helvetica"
        android:onClick="openVolunteerActivity"
        android:text="@string/volunteerButtonText"
        android:textColor="@color/background"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/choiceTextview" />

    <TextView
        android:id="@+id/choiceTextview"
        android:layout_width="105dp"
        android:layout_height="33dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="8dp"
        android:fontFamily="Helvetica"
        android:text="@string/choiceTextview"
        android:textAlignment="viewStart"
        android:textColor="@color/textIam"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.228" />

    <Button
        android:id="@+id/organizationButton"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/styleButton"
        android:fontFamily="Helvetica"
        android:onClick="openOrganizationActivity"
        android:text="@string/organizationButtonText"
        android:textColor="@color/background"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/volunteerButton" />
</android.support.constraint.ConstraintLayout>
